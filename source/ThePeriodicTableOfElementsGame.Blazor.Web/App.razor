@inherits Fluxor.Blazor.Web.Components.FluxorComponent
<Fluxor.Blazor.Web.StoreInitializer />
<LayoutView Layout=typeof(MainLayout)>
	@if (SharedState.Value.ShowMainMenu)
	{
		<MainMenu />
	}
	@if (SharedState.Value.ShowElementsMatchGame)
	{
		<ElementsMatchGame />
	}
	@if (SharedState.Value.ShowElementsMatchGameOver)
	{
		<ElementsMatchGameOver />
	}
	@if (SharedState.Value.ShowElementsSpeedMatchGame)
	{
		<ElementsSpeedMatchGame />
	}
</LayoutView>